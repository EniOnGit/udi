{
  "name": "ptw-udi",
  "version": "0.0.2",
  "description": "Generate an unique device identification as speficied by HIBC.",
  "main": "lib/udi.js",
  "typings": "lib/udi.d.ts",
  "scripts": {
    "build": "npm-run-all clean build:cjs build:browser build:browser:min",
    "build:cjs": "cross-env NODE_ENV=lib webpack src/udi.ts lib/udi.js",
    "build:browser": "cross-env NODE_ENV=browser webpack src/udi.ts dist/udi.js",
    "build:browser:min": "cross-env NODE_ENV=production webpack src/udi.ts dist/udi.min.js",
    "clean": "npm-run-all clean:dist clean:lib clean:cover",
    "clean:dist": "rimraf dist",
    "clean:lib": "rimraf lib",
    "clean:cover": "rimraf coverage spec-js",
    "cover": "npm-run-all cover:all cover:serve",
    "cover:all": "rimraf spec-js && tsc -m commonjs --outDir spec-js --sourceMap --target ES5 -d && node node_modules/istanbul/lib/cli.js cover -x 'spec-js/**/*.test.js' -x 'spec-js/*.test.js' _mocha spec-js/**/*.test.js spec-js/*.test.js && remap-istanbul -i ./coverage/coverage.raw.json -o coverage/html-report -t html",
    "cover:serve": "http-server coverage/html-report -a 'localhost' -p 3001 -o",
    "test": "cross-env NODE_ENV=test mocha-webpack --webpack-config webpack.config.js --require source-map-support/register \"src/**/*.test.ts\"",
    "watch": "watch \"npm test && echo ‚è±  WAITING...\" src -d -u -w=15",
    "prepublish": "npm-run-all clean test build"
  },
  "repository": {
    "type": "git",
    "url": "git+github.com:PTW-Freiburg/udi.git"
  },
  "homepage": "https://github.com/PTW-Freiburg/udi#readme",
  "bugs": {
    "url": "https://github.com/PTW-Freiburg/udi/issues"
  },
  "keywords": [
    "udi",
    "hibc",
    "id",
    "identification"
  ],
  "files": [
    "lib",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": {
    "name": "PTW Freiburg GmbH",
    "url": "www.ptw.de",
    "email": "info@ptw.de"
  },
  "contributors": [
    {
      "name": "Sebastian Sebald",
      "email": "sebastian.sebald@ptw.de"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "cross-env": "1.0.8",
    "http-server": "0.9.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "2.5.3",
    "mocha-webpack": "0.4.0",
    "npm-run-all": "2.2.2",
    "remap-istanbul": "0.6.4",
    "rimraf": "2.5.2",
    "source-map-support": "0.4.0",
    "ts-loader": "0.8.1",
    "tslint": "3.12.1",
    "tslint-loader": "2.1.5",
    "typescript": "1.8.10",
    "typings": "1.3.1",
    "watch": "0.19.1",
    "webpack": "1.13.1",
    "webpack-node-externals": "1.2.0"
  }
}
